{
	"manifest_version": 3,
	"name": "Fuck Albert",
	"version": "1.0.0",
	"description": "I hate Albert, so I decide to make a chrome extension to make my life easier. Hope it helps you too.",
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"contextMenus",
		"sidePanel"
	],
	"host_permissions": ["https://sis.nyu.edu/*", "https://*.nyu.edu/*"],
	"background": {
		"service_worker": "src/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://sis.nyu.edu/*", "https://*.nyu.edu/*"],
			"js": ["src/content.js"],
			"css": ["src/content.css"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true
		}
	],
	"action": {
		"default_popup": "src/popup.html",
		"default_title": "Fuck Albert",
		"default_icon": {
			"16": "assets/icon16.png",
			"48": "assets/icon48.png",
			"128": "assets/icon128.png"
		}
	},
	"side_panel": {
		"default_path": "src/popup.html?mode=sidepanel"
	},
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"commands": {
		"open-planner": {
			"suggested_key": {
				"default": "Alt+Shift+P",
				"mac": "Alt+Shift+P"
			},
			"description": "Open the weekly schedule planner"
		}
	},
	"web_accessible_resources": [
		{
			"resources": [
				"src/popup.html",
				"src/popup.css",
				"src/popup.js",
				"src/weekly-view.html",
				"src/weekly-view.css",
				"src/weekly-view.js",
				"src/course-storage.js",
				"src/planner.js",
				"src/bucket-manager.js",
				"src/utils/constants.js",
				"src/utils/calendar-utils.js",
				"src/utils/time-parser.js"
			],
			"matches": ["<all_urls>"]
		}
	]
}
